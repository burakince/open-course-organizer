<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.header {
			text-align: center;
			font-size: 40px;
		}
		.footer {
			text-align: center;
			font-size: 8px;
		}
	</ui:style>
	<g:DockLayoutPanel ui:field="dockLayoutPanel" unit="PX">
		<g:north size="55">
			<g:HTML styleName="{style.header}">Open Course Organizer</g:HTML>
		</g:north>
		<g:west size="100">
			<g:HTML>Menu</g:HTML>
		</g:west>
		<g:center>
			<g:SimplePanel ui:field="container"></g:SimplePanel>
		</g:center>
		<g:south size="30">
			<g:HTML styleName="{style.footer}">Powered By: FSF</g:HTML>
		</g:south>
	</g:DockLayoutPanel>
</ui:UiBinder>